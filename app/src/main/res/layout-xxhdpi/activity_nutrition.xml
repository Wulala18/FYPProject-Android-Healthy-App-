<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    tools:context=".Functions.FoodRecipe.Nutrition">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/nutrition_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_above="@+id/ll2"
        android:layout_below="@+id/nutrition_toolbar"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="1dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cdfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="btn_healthyfood"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">


            <TextView
                android:id="@+id/tvfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nutritionfood"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="Food Nutrition"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_above="@+id/ll3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-7dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:padding="@dimen/_4sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cshfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="btn_healthydrink"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">


            <TextView
                android:id="@+id/tvhsf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/healthydirnk"
                android:gravity="center_vertical"
                android:text="Healthy Food Recipe"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="-6dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:padding="@dimen/_3sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cscfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="btn_diyrecipe"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">


            <TextView
                android:id="@+id/tvhcsf"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:background="@drawable/foodtoavoid"
                android:gravity="center_vertical"
                android:text="DIY FOOD RECIPE"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>
